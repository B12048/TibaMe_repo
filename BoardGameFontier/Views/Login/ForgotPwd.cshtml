@{
    ViewData["Title"] = "忘記密碼";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card p-5 shadow" style="width: 400px;">
        <h4 class="text-center mb-4">忘記密碼</h4>

        <form method="post" action="#">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">電子郵件 <span class="text-danger">*</span></label>
                <input type="email" class="form-control" name="Email" placeholder="請輸入註冊的電子郵件" required />
                @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success w-100 mt-3">發送驗證信</button>
        </form>

        <div class="text-center mt-3">
            <a href="@Url.Action("IndexLogin", "Login")" class="text-muted">返回登入畫面</a>
        </div>
    </div>
</div>

