@model List<GameDetail>
@{
    ViewData["Title"] = "圖鑑管理";
}
<div class="min-vh-100 bg-light">
    <div class="container-fluid">
        <div class="row d-flex flex-grow-1">
            <!-- 側邊選單 -->
            @Html.Partial("_AdminSidebar")

            <!-- 主內容 -->
            <main id="postApp" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <!-- 發文清單 -->
                <div class="card mb-4">
                        <div class="container mt-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h2>圖鑑管理</h2>
                                <a class="btn btn-success" asp-controller="Dex" asp-action="Create">
                                    <i class="bi bi-plus-circle"></i> 新增圖鑑
                                </a>
                            </div>

                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <table class="table table-hover align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width:60px;">封面</th>
                                                <th style="width:130px;">中文名稱</th>
                                                <th style="width:130px;">英文名稱</th>
                                                <th style="width:100px;">BGG排名</th>
                                                <th style="width:100px;">BGF排名</th>
                                                <th style="width:150px;">操作</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td><img src="@item.Cover" class="img-thumbnail rounded" style="width:60px; height:60px; object-fit:cover;" /></td>
                                                    <td>@item.zhtTitle</td>
                                                    <td>@item.engTitle</td>
                                                    <td>@item.OverallRank</td>
                                                    <td>$@item.BGFRank</td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <a class="btn btn-sm btn-primary" asp-controller="Dex" asp-action="Edit" asp-route-id="@item.Id">
                                                                <i class="bi bi-pencil"></i> 修改
                                                            </a>
                                                            <a class="btn btn-sm btn-danger" asp-controller="Dex" asp-action="Delete" asp-route-id="@item.Id">
                                                                <i class="bi bi-trash"></i> 刪除
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </main>
        </div>
    </div>
</div>