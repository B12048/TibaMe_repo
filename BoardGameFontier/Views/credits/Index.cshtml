            transform: translateX(-100%);
        }

        .sec5.show-animate .animate {
            transform: translateX(0);
        }

        p.animate {
            transition-delay: 0.2s;
        }

        /* 共用樣式 */
        .sec5 {
            padding: 60px 20px;
            text-align: center;
        }

        .sec5 .animate {
            transform: translateX(-100%);
            transition: 0.5s;
        }

        .sec5.show-animate .animate {
            transform: translateX(0);
