        }

        .sec5 .images img {
            max-width: 350px;
        }

        /* scrolling styles */
        section .animate {
            opacity: 0;
            filter: blur(5px);
            transition: 0.5s;
        }

        section.show-animate .animate {
            opacity: 1;
            filter: blur(0px);
        }

        .sec2 .animate {
            transform: translateX(100%);
        }
        .sec2.show-animate .animate {
            transform: translateX(0);
        }
        .animate .text-center .mb-5{
            transition-delay:0.2s;
        }
